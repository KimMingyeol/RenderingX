<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="constantin.renderingx.example">
    <!-- DANGEROUS (needs runtime request) -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ExampleSuperSyncA"
            android:screenOrientation="landscape"
            android:theme="@style/MyStyleFullscreen"/>
        <activity android:name=".ExampleRenderingA"
            android:theme="@style/MyStyleFullscreen"/>
        <activity android:name="constantin.renderingX.GLESInfo.AWriteGLESInfo" />

    </application> <!-- DANGEROUS (needs runtime request) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- DANGEROUS (needs runtime request) -->
    <!-- open UDP ports -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>